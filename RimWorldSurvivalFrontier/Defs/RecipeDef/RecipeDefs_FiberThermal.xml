<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!--  ================= RSF_FiberWoolRecipe  ================= -->
    <RecipeDef>
        <!-- ID -->
        <defName>RSF_FiberWoolRecipe</defName>
        <label>RSF_FiberWoolRecipe.label</label>
        <description>RSF_FiberWoolRecipe.description</description>

        <!-- Mechanic CORE -->
        <jobString>RSF_FiberWoolRecipe.jobString</jobString>
        <workAmount>800</workAmount>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat> <!-- Work Speed Stat -->
        <researchPrerequisite>RSF_FiberWoolResearch</researchPrerequisite>

        <!-- Preserves work progress if interrupted -->
        <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
        <displayPriority>0</displayPriority> <!-- priority work-->

        <!-- Where you craft it  -->
        <recipeUsers>
            <li>BiofuelRefinery</li>
        </recipeUsers>

        <!-- INGREDIENTS -->
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>RSF_PlasticFiber</li>
                    </thingDefs>
                </filter>
                <count>25</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Hay</li>
                    </thingDefs>
                </filter>
                <count>15</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Steel</li>
                    </thingDefs>
                </filter>
                <count>5</count>
            </li>
        </ingredients>

        <products>
            <RSF_FiberWool>20</RSF_FiberWool>
        </products>

        <!-- Effect Working & sound -->
        <effectWorking>Cremate</effectWorking>
        <soundWorking>Recipe_Cremate</soundWorking>
    </RecipeDef>

